{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('SiteBundle/styles/blog.less') }}" rel="stylesheet/less" type="text/css"/>
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <section class="articles col-md-8 col-sm-12">
                {% block body %}
                {% endblock %}
            </section>
            <aside class="sidebar col-md-4 col-sm-12">
                {% block sidebar %}
                    {{ render(controller("PierreBlogBundle:Blog:sidebar")) }}
                {% endblock %}
            </aside>
        </div>
    </div>

{% endblock %}
