{% extends 'PierreBonsPlansBundle::layout.html.twig' %}

{% block title %} | Tous les bons plans étudiants{% endblock %}
{% block description %}
    Retrouve les bons plans étudiants de ta ville (astuces, réductions, avantages) pour profiter de ta vie étudiante à 100% - Le Blog Étudiant
{% endblock %}

{% block keywords %}
    plusdebonsplans, bon plan, bon de reduction, code promo etudiant, avantage carte etudiant, gagner argent étudiant, bon plan astuce, annonce etudiant, bon de reduction, etudiant, offre etudiant, reduction etudiant, reduction carte etudiant
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('Site/modules/select2/dist/css/select2.min.css') }}" rel="stylesheet/less" type="text/css"/>

{% endblock %}



{% block body %}
    <div style="display: none">
        <p>plusdebonsplans, bon plan, bon de reduction, code promo etudiant, avantage carte etudiant, gagner argent étudiant, bon plan astuce, annonce etudiant, bon de reduction, etudiant, offre etudiant, reduction etudiant, reduction carte etudiant</p>
    </div>
    <div class="search-bon-plan">
        <div class="row">
            <div class="col-md-12">
                <h2>Bons plans</h2>
            </div>
        </div>
        <div class="row">
            {{ form_start(form, {'attr': {'class': 'row form-search', 'method': 'post'}}) }}
            <div class="col-md-6 col-md-offset-2 col-xs-offset-1 col-xs-10">
                {{ form_widget(form.city, {'attr': {'class': 'select-city'}}) }}
            </div>
            <div class="col-md-offset-0 col-md-2 col-xs-offset-3 col-xs-6 text-center">
                {{ form_widget(form.submit, {'attr': { 'class': 'btn submit-button' }}) }}
            </div>
            {{ form_end(form) }}
        </div>
        {% if city is defined %}
            <div class="row">
                <div class="col-md-12">
                    <p>Résultats de la recherche pour la ville : {{ city }}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p><a href="{{ path('PierreBonsPlansBundle_homepage') }}">Cliquez ici</a> pour retourner à la liste
                        générale</p>
                </div>
            </div>
        {% endif %}
    </div>

    {% for bonsplan in bonsplans %}
    <article class="bonsplan">
        <div class="row">
            <img class="col-xs-12 col-md-4" src="{{ asset("BonsPlansBundle/logos/" ~ bonsplan.logo ) }}"
                 alt="{{ bonsplan.logo }}"/>
            <div class="col-xs-12 col-md-8">
                <h2>
                    <a href="{{ path('PierreBonsPlansBundle_bonsplan_show', { 'slug': bonsplan.slug }) }}">{{ bonsplan.title }}</a>
                </h2>
                <div class="small-informations">
                    <p>Localisation : {{ bonsplan.localisation }}</p>
                    <p>Dernière mise à jour : {{ bonsplan.updated|localizeddate('full', 'none', 'fr') }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <footer class="meta">
                <p>Nombre de commentaires : {{ bonsplan.nbcomments }}</p>
                {#<p>Localisation : {{ bonsplan.localisation }}</p>#}
            </footer>
        </div>
    </article>
    {% else %}
    <p>Il n'y a aucun article pour le moment, désolé.<p>
    {% endfor %}
    <div class="text-center">
        <ul class="pagination">
            {% if pagination.page > 1 %}
                <li><a href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': 1})) }}"><i class="fa fa-angle-double-left"
                                                                       aria-hidden="true"></i></a></li>
                <li><a href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': pagination.page-1})) }}" style="width: 33.6px;"><i
                                class="fa fa-angle-left" aria-hidden="true"></i></a></li>
            {% endif %}
            {#display p numbers only from p-2 to p+2 but don't go < 1 or  > pages_count#}
            {% for p in range(max(pagination.page - 2, 1), min(pagination.page + 2, pagination.pages_count)) %}
                <li {% if p == pagination.page %} class="active"{% endif %}>
                    <a {% if p == pagination.page %} onclick='return false;'{% endif %}
                            href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}">{{ p }}</a>
                </li>
            {% endfor %}
            {% if pagination.page<pagination.pages_count %}
                <li><a href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': pagination.page + 1})) }}" style="width: 33.6px;"> <i
                                class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                <li><a href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': pagination.pages_count})) }}"><i
                                class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
            {% endif %}
        </ul>
    </div>
    <script src="{{ asset('Site/modules/select2/dist/js/select2.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $('.select-city').select2();
    </script>
{% endblock %}

