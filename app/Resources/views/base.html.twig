        <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>


        {#Slick2#}
        <link rel="stylesheet" type="text/css" href="{{ asset('Site/modules/slick/slick.css') }}"/>
