    <script type="application/ld+json">{% block structureddata %}{% endblock %}</script>

    <meta name="description" content="{% block description %}{% endblock %}"/>
    <meta name="keywords" content="{% block keywords %}{% endblock %}"/>

    {#Favicons#}
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}"/>

    {% block stylesheets %}
        {#API#}
        <link rel="stylesheet" type="text/css"
              href="{{ asset('SiteBundle/modules/bootstrap-4.0.0/css/bootstrap.min.css') }}"/>
        <script type="text/javascript" src="https://use.fontawesome.com/541706c8cc.js"></script>

        <link rel="stylesheet" type="text/css" href="{{ asset('SiteBundle/modules/datatables/datatables.min.css') }}"/>

        {#Slick2#}
        <link rel="stylesheet" type="text/css" href="{{ asset('SiteBundle/modules/slick/slick.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('SiteBundle/modules/slick/slick-theme.css') }}"/>

        {#CSS#}
        <link rel="stylesheet/less" type="text/css" href="{{ asset('SiteBundle/styles/footer.less') }}"/>
        <link rel="stylesheet/less" type="text/css" href="{{ asset('SiteBundle/styles/base.less') }}"/>
    {% endblock %}

    {% block scripts %}
        {#LESS#}
        <script type="text/javascript" src="{{ asset('SiteBundle/styles/less.js') }}"></script>
        <script type="text/javascript" src="{{ asset('SiteBundle/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('SiteBundle/js/js-cookie.js') }}"></script>

        <!--[if lt IE 9]>
        <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    {% endblock %}
</head>

